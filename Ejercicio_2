/* 2- Usando un elemento de selección múltiple, obtener el algoritmo, 
que pregunte al usuario la fecha de su nacimiento e indicarle su horóscopo. (switch)*/
//me ayudó un amigo computologo para hacerlo

#include <stdio.h>

int main() {
    int d, m;

    printf("Ingrese su fecha de nacimiento (dd mm): "); //pide fecha de nacimiento
    scanf("%i %i", &d, &m);

    // Determinar el signo del zodíaco
    switch(m) {
        case 1: // Enero
            if (d <= 20)
                printf("Tu signo del zodiaco es Capricornio.\n");
            else
                printf("Tu signo del zodiaco es Acuario.\n");
            break;
        case 2: // Febrero
            if (d <= 19)
                printf("Tu signo del zodiaco es Acuario.\n");
            else
                printf("Tu signo del zodiaco es Piscis.\n");
            break;
        case 3: // Marzo
            if (d <= 20)
                printf("Tu signo del zodiaco es Piscis.\n");
            else
                printf("Tu signo del zodiaco es Aries.\n");
            break;
        case 4: // Abril
            if (d <= 20)
                printf("Tu signo del zodiaco es Aries.\n");
            else
                printf("Tu signo del zodiaco es Tauro.\n");
            break;
        case 5: // Mayo
            if (d <= 21)
                printf("Tu signo del zodiaco es Tauro.\n");
            else
                printf("Tu signo del zodiaco es Géminis.\n");
            break;
        case 6: // Junio
            if (d <= 21)
                printf("Tu signo del zodiaco es Géminis.\n");
            else
                printf("Tu signo del zodiaco es Cáncer.\n");
            break;
        case 7: // Julio
            if (d <= 22)
                printf("Tu signo del zodiaco es Cáncer.\n");
            else
                printf("Tu signo del zodiaco es Leo.\n");
            break;
        case 8: // Agosto
            if (d <= 22)
                printf("Tu signo del zodiaco es Leo.\n");
            else
                printf("Tu signo del zodiaco es Virgo.\n");
            break;
        case 9: // Septiembre
            if (d <= 22)
                printf("Tu signo del zodiaco es Virgo.\n");
            else
                printf("Tu signo del zodiaco es Libra.\n");
            break;
        case 10: // Octubre
            if (d <= 22)
                printf("Tu signo del zodiaco es Libra.\n");
            else
                printf("Tu signo del zodiaco es Escorpio.\n");
            break;
        case 11: // Noviembre
            if (d <= 21)
                printf("Tu signo del zodiaco es Escorpio.\n");
            else
                printf("Tu signo del zodiaco es Sagitario.\n");
            break;
        case 12: // Diciembre
            if (d <= 21)
                printf("Tu signo del zodiaco es Sagitario.\n");
            else
                printf("Tu signo del zodiaco es Capricornio.\n");
            break;
        default:
            printf("Mes inválido.\n");
    }

    return 0;
}
